<h1>New user:</h1>
<%= view_model.errors unless view_model.errors.empty? %>

<% f = form(
    view_model.user,
    users_path,
    path_prefix: 'user'
  ) %>
  <%= f.start %>
  <%= f.hidden value: view_model.csrf_token,
               name: 'authenticity_token'%> 
  <%= f.label :name %>
  <%= f.input :name %>
  <br>
  <%= f.label :email %>
  <%= f.input :email %>
  <br><br>
  <%= f.submit %>
<%= f.end %>
