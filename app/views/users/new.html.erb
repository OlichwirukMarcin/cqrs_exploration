<h1>New user:</h1>
<%= view_model.errors unless view_model.errors.empty? %>

<% f = form(
    view_model.user,
    create_user_path,
    csrf_token: view_model.csrf_token,
    csrf_token_name: 'authenticity_token',
    path_prefix: 'user'
  ) %>
  <%= f.start %>
  <%= f.label :name %>
  <%= f.input :name %>
  <br>
  <%= f.label :email %>
  <%= f.input :email %>
  <br><br>
  <%= f.submit %>
<%= f.end %>
